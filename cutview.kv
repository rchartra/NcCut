# This document outlines and creates static UI features for GUI

<RoundedButton@Button>:
    background_color: 0,0,0,0
    canvas.before:
        Color:
            rgba: (.4,.4,.4,1) if self.state=='normal' else (0,.4,.7,1)
        RoundedRectangle:
            pos: self.pos
            size: self.size
            radius: [15,]

<HomeScreen>

    BoxLayout:
        orientation: "vertical"
        size_hint: (0.8, 1)
        spacing: dp(10)
        padding: [dp(20), dp(20), dp(10), dp(20)]

        RelativeLayout:

            size_hint: (1, 0.9)

            StencilView:
                id: view
                size_hint: (1, 1)
                #size_hint: (1, 0.7)
                #pos: self.pos

                canvas:
                    Color:
                        rgb: [.7, .7, .7]
                    RoundedRectangle:
                        size: self.size
                        pos: self.pos

        BoxLayout:
            size_hint: (1, 0.1)
            spacing: dp(10)
            padding: [dp(10), dp(10), dp(10), dp(10)]
            canvas:
                Color:
                    rgb: [.2, .2, .2]
                RoundedRectangle:
                    size: self.size
                    pos: self.pos
                    radius: [15,]

            TextInput:
                id: file_in
                size_hint: (0.7, 1)
                hint_text: "Enter Image or NetCDF File Path"

            RoundedButton:
                size_hint: (0.1, 1)
                text: "Go"
                font_size: self.size[1] / 2
                on_press: root.gobtn()

            RoundedButton:
                size_hint: (0.2, 1)
                text: "Settings"
                font_size: self.size[1] / 2
                on_press: app.open_settings()

    GridLayout:
        cols: 1
        size_hint: (0.2, 1)
        pos_hint: {"x":0.8}
        padding: [dp(10), dp(20), dp(20), dp(20)]
        spacing: [dp(20)]

        RoundedButton:
            text: "Single Transect"
            font_size: self.size[0] / 10
            on_press: root.transectbtn("single")

        RoundedButton:
            text: "Multiple Transects"
            font_size: self.size[0] / 10
            on_press: root.transectbtn("multi")

        RoundedButton:
            text: "Marker"
            font_size: self.size[0] / 10
            on_press: root.transectbtn("marker")

        RoundedButton:
            text: "Multiple Marker"
            font_size: self.size[0] / 10
            on_press: root.transectbtn("filament")

        RoundedButton:
            text: "Rotate"
            font_size: self.size[0] / 10
            on_press: root.rotate()

        RoundedButton:
            text: "Quit"
            font_size: self.size[0] / 10
            on_press: root.quitbtn()